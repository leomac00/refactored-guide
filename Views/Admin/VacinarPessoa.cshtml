@model DesafioMVC.DTO.VacinacaoDTO
@{
  Layout = "_Layout";
  ViewData["Title"] = "Vacinar pessoa";
}

<h2>Vacinar pessoa</h2>
<form class="form-horizontal" asp-controller="Vacinacoes" asp-action="Registrar" method="POST">
  <input type="hidden" asp-for="Id" value="0">
  <input type="hidden" asp-for="LoteId" value="@ViewBag.LoteId">

  <label asp-for="PessoaId">Pessoa: </label>
  <select class="form-control" asp-for="PessoaId"
    asp-items='@(new SelectList(@ViewBag.Pessoas, "Id", "Nome"))'></select>
  <span class="text-danger" asp-validation-for="PessoaId"></span><br>


  <label asp-for="Data">
    Data da vacinação:
  </label>
  <input id="Data" class="form-control" asp-for="Data" name="Data" autocomplete="off" type="date">
  <span id="dv" class="text-danger" asp-validation-for="Data"></span><br>

  <label asp-for="LocalId">Local: </label>
  <select class="form-control" asp-for="LocalId" asp-items='@(new SelectList(@ViewBag.Locais, "Id", "Nome"))'></select>
  <span class="text-danger" asp-validation-for="LocalId"></span><br>

  <br><button type="submit" class="btn btn-success">Registrar vacinação</button>
</form>
