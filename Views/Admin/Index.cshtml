@{
  Layout = "_Layout";
  ViewData["Title"] = "Administrativo";
}

<head>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#tabela').DataTable({
        "searching": false,
        "language": {
          "lengthMenu": "Mostrando _MENU_ registros por página",
          "zeroRecords": "Nenhuma informação encontrada",
          "info": "Páginas: _PAGE_ / _PAGES_",
          "infoEmpty": "Páginas: 0 / _PAGES_",
          "search": "Buscar: ",
          "paginate": {
            "first": " Primeiro ",
            "last": " Último ",
            "next": " Próximo ",
            "previous": " Anterior "
          }
        }
      });

    });
  </script>
</head>
<h2>Setor administrativo</h2>
<hr />

<table id="tabela" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Ações</th>
      <th class="text-center">Acesso</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Vacinar pessoa</td>
      <td class="text-center">
        <a asp-action="SelecionarVacina" asp-controller="Admin" class="btn btn-primary" style="display: inline"><i
            class="fas fa-arrow-right"></i></a>
      </td>
    </tr>
    <tr>
      <td>Relatórios</td>
      <td class="text-center">
        <a href="/Admin/Relatorios" class="btn btn-success"><i class="fas fa-arrow-right"></i></a>
      </td>
    </tr>
    <tr>
      <td>Registrar nova vacina</td>
      <td class="text-center">
        <a asp-action="RegistrarVacina" asp-controller="Admin" class="btn btn-warning"><i
            class="fas fa-arrow-right"></i></a>
      </td>
    </tr>
    <tr>
      <td>Registrar novo lote</td>
      <td class="text-center">
        <a asp-action="RegistrarLote" asp-controller="Admin" class="btn btn-warning"><i
            class="fas fa-arrow-right"></i></a>
      </td>
    </tr>
    <tr>
      <td>Registrar novo endereço</td>
      <td class="text-center">
        <a asp-action="RegistrarEndereco" asp-controller="Admin" class="btn btn-warning"><i
            class="fas fa-arrow-right"></i></a>
      </td>
    </tr>
    <tr>
      <td>Registrar pessoa</td>
      <td class="text-center">
        <a asp-action="RegistrarPessoa" asp-controller="Admin" class="btn btn-warning"><i
            class="fas fa-arrow-right"></i></a>
      </td>
    </tr>
    <tr>
      <td>Registrar novo local de vacinação</td>
      <td class="text-center">
        <a asp-action="RegistrarLocal" asp-controller="Admin" class="btn btn-warning"><i
            class="fas fa-arrow-right"></i></a>
      </td>
    </tr>
    <tr>
      <td>Popular banco de dados</td>
      <td class="text-center">
        <a asp-action="PopularDBWarning" asp-controller="Admin" class="btn btn-danger"><i
            class="fas fa-arrow-right"></i></a>
      </td>
    </tr>

  </tbody>
</table>
